<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.CollectorAddAlbumFragment">

    <TextView
    	android:textDirection="locale"
        android:textAlignment="gravity"
        android:id="@+id/collector_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        style="@style/labelTextNew"/>

    <Spinner
        android:id="@+id/my_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <TextView
        	android:textDirection="locale"
            android:textAlignment="gravity"
            android:id="@+id/label_comment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/collector_add_price"
            style="@style/labelTextNew" />
        <EditText
            android:id="@+id/priceAlbum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_background"
            android:inputType="number"
            android:hint="@string/collector_add_price_hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
        	android:textDirection="locale"
            android:textAlignment="gravity"
            android:id="@+id/label_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/collector_album_status"
            style="@style/labelTextNew" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_background"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCreate"
        style="@style/ButtonRounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/save" />

</LinearLayout>
